<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffe6ffe3"
    tools:context="hitheshReddivariC.crisis.Crisis">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/get_contact"
            android:layout_width="152dp"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:background="@color/light_gray_header_color"
            android:onClick="pickContact"
            android:layout_margin="5dp"
            android:text="@string/pick_contact"
            android:textSize="22sp"
            android:visibility="gone" />

        <Button
            android:id="@+id/button1"
            android:layout_width="152dp"
            android:layout_height="wrap_content"
            android:background="@color/light_gray_header_color"
            android:onClick="configure"
            android:text="@string/title_activity_configure"
            android:layout_margin="5dp"
            android:textColor="@android:color/white"
            android:textSize="22sp"
            android:visibility="gone" />

    </LinearLayout>
     
    <ListView 
        android:id="@android:id/list"
        android:background="#ff9cf6ff"
        android:divider="@android:color/darker_gray"
        android:dividerHeight="1dp"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">
    </ListView>
    
</LinearLayout>
